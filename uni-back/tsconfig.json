{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "build",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "src/**/*.ts"]
}
